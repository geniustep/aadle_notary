<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- ============================================ -->
        <!-- Document Type List View -->
        <!-- ============================================ -->

        <record id="view_notary_document_type_list" model="ir.ui.view">
            <field name="name">notary.document.type.list</field>
            <field name="model">notary.document.type</field>
            <field name="arch" type="xml">
                <list string="أنواع الوثائق" default_order="sequence,name">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="name_fr"/>
                    <field name="code"/>
                    <field name="sequence_prefix"/>
                    <field name="default_price" widget="monetary"/>
                    <field name="currency_id" column_invisible="1"/>
                    <field name="document_count"/>
                    <field name="is_active" widget="boolean_toggle"/>
                </list>
            </field>
        </record>

        <!-- ============================================ -->
        <!-- Document Type Form View -->
        <!-- ============================================ -->

        <record id="view_notary_document_type_form" model="ir.ui.view">
            <field name="name">notary.document.type.form</field>
            <field name="model">notary.document.type</field>
            <field name="arch" type="xml">
                <form string="نوع الوثيقة">
                    <sheet>
                        <widget name="web_ribbon" title="غير فعال" bg_color="text-bg-danger" invisible="is_active"/>

                        <!-- Smart Buttons -->
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_documents" type="object"
                                    class="oe_stat_button" icon="fa-file-text-o">
                                <field name="document_count" widget="statinfo" string="الوثائق"/>
                            </button>
                        </div>

                        <group>
                            <group string="المعلومات الأساسية">
                                <field name="name" placeholder="اسم نوع الوثيقة بالعربية"/>
                                <field name="name_fr" placeholder="Nom du type en français"/>
                                <field name="code" placeholder="marriage_contract"/>
                                <field name="sequence_prefix" placeholder="MC-"/>
                                <field name="is_active" widget="boolean_toggle"/>
                                <field name="sequence"/>
                            </group>

                            <group string="السعر والعملة">
                                <field name="default_price" widget="monetary"/>
                                <field name="currency_id" options="{'no_create': True, 'no_open': True}"/>
                            </group>
                        </group>

                        <group string="الوصف">
                            <field name="description" nolabel="1" placeholder="وصف تفصيلي لنوع الوثيقة..."/>
                        </group>

                        <group string="التكامل (اختياري)">
                            <field name="template_id" placeholder="معرّف القالب في نظام aadle_docgen"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- ============================================ -->
        <!-- Document Type Kanban View -->
        <!-- ============================================ -->

        <record id="view_notary_document_type_kanban" model="ir.ui.view">
            <field name="name">notary.document.type.kanban</field>
            <field name="model">notary.document.type</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="id"/>
                    <field name="name"/>
                    <field name="name_fr"/>
                    <field name="code"/>
                    <field name="default_price"/>
                    <field name="currency_id"/>
                    <field name="document_count"/>
                    <field name="is_active"/>
                    <templates>
                        <t t-name="card">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_card_header">
                                    <div class="o_kanban_card_header_title">
                                        <div class="o_primary">
                                            <strong><field name="name"/></strong>
                                        </div>
                                        <div class="o_secondary">
                                            <field name="name_fr"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_card_body">
                                    <div>
                                        <span class="badge text-bg-primary"><field name="code"/></span>
                                        <t t-if="!record.is_active.raw_value">
                                            <span class="badge text-bg-danger">غير فعال</span>
                                        </t>
                                    </div>
                                    <div class="mt-2">
                                        <strong>السعر: </strong>
                                        <field name="default_price" widget="monetary"/>
                                    </div>
                                </div>
                                <div class="o_kanban_card_footer">
                                    <div>
                                        <i class="fa fa-file-text-o"/> <field name="document_count"/> وثيقة
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- ============================================ -->
        <!-- Document Type Search View -->
        <!-- ============================================ -->

        <record id="view_notary_document_type_search" model="ir.ui.view">
            <field name="name">notary.document.type.search</field>
            <field name="model">notary.document.type</field>
            <field name="arch" type="xml">
                <search string="بحث أنواع الوثائق">
                    <field name="name" string="الاسم" filter_domain="['|', ('name', 'ilike', self), ('name_fr', 'ilike', self)]"/>
                    <field name="code"/>

                    <filter string="الفعّالة" name="active" domain="[('is_active', '=', True)]"/>
                    <filter string="غير الفعّالة" name="inactive" domain="[('is_active', '=', False)]"/>

                    <separator/>

                    <group expand="0" string="تجميع حسب">
                        <filter string="الحالة" name="group_by_active" context="{'group_by': 'is_active'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- ============================================ -->
        <!-- Actions -->
        <!-- ============================================ -->

        <record id="action_notary_document_type" model="ir.actions.act_window">
            <field name="name">أنواع الوثائق</field>
            <field name="res_model">notary.document.type</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    إنشاء نوع وثيقة جديد
                </p>
                <p>
                    أنواع الوثائق تحدد الأنواع المتاحة من الوثائق العدلية مع أسعارها الافتراضية.
                </p>
            </field>
        </record>

    </data>
</odoo>
