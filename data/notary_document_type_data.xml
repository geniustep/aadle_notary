<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- ============================================ -->
        <!-- أنواع الوثائق الافتراضية -->
        <!-- ============================================ -->

        <!-- 1. عقد زواج -->
        <record id="document_type_marriage_contract" model="notary.document.type">
            <field name="name">عقد زواج</field>
            <field name="name_fr">Contrat de Mariage</field>
            <field name="code">marriage_contract</field>
            <field name="sequence_prefix">MC-</field>
            <field name="default_price">500.0</field>
            <field name="description">عقد زواج شرعي يتضمن تفاصيل الزوجين والصداق والشهود</field>
            <field name="sequence">10</field>
            <field name="is_active" eval="True"/>
        </record>

        <!-- 2. رسم إرث -->
        <record id="document_type_inheritance_deed" model="notary.document.type">
            <field name="name">رسم إرث</field>
            <field name="name_fr">Acte d'Héritage</field>
            <field name="code">inheritance_deed</field>
            <field name="sequence_prefix">IH-</field>
            <field name="default_price">800.0</field>
            <field name="description">رسم إرث شرعي يحدد نصيب كل وارث حسب الشريعة الإسلامية</field>
            <field name="sequence">20</field>
            <field name="is_active" eval="True"/>
        </record>

        <!-- 3. عقد طلاق -->
        <record id="document_type_divorce_contract" model="notary.document.type">
            <field name="name">عقد طلاق</field>
            <field name="name_fr">Acte de Divorce</field>
            <field name="code">divorce_contract</field>
            <field name="sequence_prefix">DC-</field>
            <field name="default_price">400.0</field>
            <field name="description">عقد طلاق رسمي يوثق انفصال الزوجين</field>
            <field name="sequence">30</field>
            <field name="is_active" eval="True"/>
        </record>

        <!-- 4. توكيل -->
        <record id="document_type_power_attorney" model="notary.document.type">
            <field name="name">توكيل</field>
            <field name="name_fr">Procuration</field>
            <field name="code">power_attorney</field>
            <field name="sequence_prefix">PA-</field>
            <field name="default_price">300.0</field>
            <field name="description">توكيل رسمي يخول الوكيل القيام بتصرفات قانونية نيابة عن الموكل</field>
            <field name="sequence">40</field>
            <field name="is_active" eval="True"/>
        </record>

        <!-- 5. تصديق -->
        <record id="document_type_certification" model="notary.document.type">
            <field name="name">تصديق</field>
            <field name="name_fr">Certification</field>
            <field name="code">certification</field>
            <field name="sequence_prefix">CR-</field>
            <field name="default_price">200.0</field>
            <field name="description">تصديق على التوقيع أو صحة وثيقة</field>
            <field name="sequence">50</field>
            <field name="is_active" eval="True"/>
        </record>

        <!-- 6. عقد بيع عقار -->
        <record id="document_type_property_sale" model="notary.document.type">
            <field name="name">عقد بيع عقار</field>
            <field name="name_fr">Contrat de Vente Immobilière</field>
            <field name="code">property_sale</field>
            <field name="sequence_prefix">PS-</field>
            <field name="default_price">1000.0</field>
            <field name="description">عقد بيع عقار أو أرض</field>
            <field name="sequence">60</field>
            <field name="is_active" eval="True"/>
        </record>

        <!-- 7. وصية -->
        <record id="document_type_will" model="notary.document.type">
            <field name="name">وصية</field>
            <field name="name_fr">Testament</field>
            <field name="code">will</field>
            <field name="sequence_prefix">WL-</field>
            <field name="default_price">600.0</field>
            <field name="description">وصية شرعية توثق رغبة الموصي في توزيع جزء من تركته</field>
            <field name="sequence">70</field>
            <field name="is_active" eval="True"/>
        </record>

    </data>
</odoo>
