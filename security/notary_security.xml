<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!-- ============================================ -->
        <!-- Categories -->
        <!-- ============================================ -->

        <record id="module_category_notary" model="ir.module.category">
            <field name="name">النظام العدلي</field>
            <field name="description">إدارة الوثائق العدلية والزبائن</field>
            <field name="sequence">10</field>
        </record>

        <!-- ============================================ -->
        <!-- Groups (المجموعات) -->
        <!-- ============================================ -->

        <!-- Group 1: Notary User (مستخدم عادي) -->
        <record id="group_notary_user" model="res.groups">
            <field name="name">مستخدم عدلي</field>
            <field name="category_id" ref="module_category_notary"/>
            <field name="comment">المستخدم العادي: عرض وإنشاء وثائقه الخاصة</field>
        </record>

        <!-- Group 2: Notary Manager (مدير) -->
        <record id="group_notary_manager" model="res.groups">
            <field name="name">مدير عدلي</field>
            <field name="category_id" ref="module_category_notary"/>
            <field name="implied_ids" eval="[(4, ref('group_notary_user'))]"/>
            <field name="comment">المدير: إتمام الوثائق وعرض وثائق المكتب وتعديل الأسعار</field>
        </record>

        <!-- Group 3: Notary Admin (إداري) -->
        <record id="group_notary_admin" model="res.groups">
            <field name="name">إداري عدلي</field>
            <field name="category_id" ref="module_category_notary"/>
            <field name="implied_ids" eval="[(4, ref('group_notary_manager'))]"/>
            <field name="comment">الإداري: كل الصلاحيات بما في ذلك إدارة أنواع الوثائق والإعدادات</field>
        </record>

        <!-- ============================================ -->
        <!-- Record Rules (قواعد الوصول) -->
        <!-- ============================================ -->

        <!-- Rule 1: العدل يرى وثائقه فقط -->
        <record id="notary_document_rule_user" model="ir.rule">
            <field name="name">Notary Document: User Own Documents</field>
            <field name="model_id" ref="model_notary_document"/>
            <field name="domain_force">[('notary_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_notary_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Rule 2: المدير يرى وثائق مكتبه -->
        <record id="notary_document_rule_manager" model="ir.rule">
            <field name="name">Notary Document: Manager Company Documents</field>
            <field name="model_id" ref="model_notary_document"/>
            <field name="domain_force">[('company_id', '=', user.company_id.id)]</field>
            <field name="groups" eval="[(4, ref('group_notary_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Rule 3: الإداري يرى كل شيء -->
        <record id="notary_document_rule_admin" model="ir.rule">
            <field name="name">Notary Document: Admin All Documents</field>
            <field name="model_id" ref="model_notary_document"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_notary_admin'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- ============================================ -->
        <!-- Document Types Rules -->
        <!-- ============================================ -->

        <!-- الجميع يمكنهم قراءة أنواع الوثائق -->
        <record id="notary_document_type_rule_read_all" model="ir.rule">
            <field name="name">Notary Document Type: Read All</field>
            <field name="model_id" ref="model_notary_document_type"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_notary_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- الإداري فقط يمكنه تعديل أنواع الوثائق -->
        <record id="notary_document_type_rule_admin" model="ir.rule">
            <field name="name">Notary Document Type: Admin Manage</field>
            <field name="model_id" ref="model_notary_document_type"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_notary_admin'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

    </data>
</odoo>
